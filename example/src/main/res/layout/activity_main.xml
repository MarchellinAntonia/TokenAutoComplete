<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

    <!--<com.tokenautocomplete.ContactsCompletionView-->
        <!--android:id="@+id/searchView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:imeOptions="actionDone"-->
        <!--android:textColor="@android:color/darker_gray"-->
        <!--android:textSize="19sp"-->
        <!--android:nextFocusDown="@+id/editText"-->
        <!--android:inputType="text|textNoSuggestions|textMultiLine"-->
        <!--android:focusableInTouchMode="true" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/register_text"
        android:text=" Pilih Penjual"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <com.tokenautocomplete.ContactsCompletionView
        android:id="@+id/namaSales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_rounded"
        android:hint="Nama Sales"/>

    <com.tokenautocomplete.ContactsCompletionView
        android:id="@+id/namaFrontliner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_rounded"
        android:hint="Nama Frontliner"/>

    <com.tokenautocomplete.ContactsCompletionView
        android:id="@+id/namaPromotor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_rounded"
        android:hint="Nama Promotor"/>

    </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nama Pelanggan"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded"
            android:id="@+id/namaPelanggan"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded"
            android:hint="@string/hp_text"
            android:id="@+id/handphone"
            android:inputType="phone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_text"
            android:layout_marginTop="12dp"
            android:text=" Ingin Menjadi Reseller?"/>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radio_group">
            <RadioButton android:id="@+id/radio_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_yes"
                android:checked="true"/>
            <RadioButton android:id="@+id/radio_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_no"/>
        </RadioGroup>

        <com.tokenautocomplete.ContactsCompletionView
            android:id="@+id/harga_jual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded"
            android:hint="Harga Jual"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_text"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded"
            android:inputType="textEmailAddress"
            android:id="@+id/email"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/immei_1"
                android:layout_marginEnd="2dp"
                android:background="@drawable/bg_rounded"
                android:layout_marginTop="12dp"
                android:id="@+id/immei1"
                android:gravity="center"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="IMMEI 2"
                android:layout_marginStart="2dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_rounded"
                android:id="@+id/immei2"
                android:gravity="center"
                />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_text"
            android:background="@drawable/bg_button_rounded"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/register_button"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tokens"
        android:layout_below="@id/register_button"
        android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:id="@+id/logout_button" />

<!--</RelativeLayout>-->
    </LinearLayout>

</ScrollView>

